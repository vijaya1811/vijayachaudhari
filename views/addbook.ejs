                    <form method="post" action="/save">
                        <div class="fields">
                            <div class="field half">
                                <input type="number" name="bookid" id="field-0" placeholder="BookId" />
                            </div>
                            <div class="field half">
                                <input type="text" name="bookname" id="field-1" placeholder="BookName" />
                            </div>
                            <div class="field half">
                                <input type="text" name="catagory" id="field-2" placeholder="Category" />
                            </div>
                            <div class="field half">
                                <input type="text" name="author" id="field-3" placeholder="Author" />
                            </div>
                            <div class="field half">
                                <input type="text" name="price" id="field-4" placeholder="Price" />
                            </div>
                            <div class="field half text-right">
                                <ul class="actions">
                                    <li><input type="submit" value="Add" class="primary" /></li>
                                </ul>
                            </div>
                        </div>
